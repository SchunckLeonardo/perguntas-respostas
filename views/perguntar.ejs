<%- include('./partials/header') %>
<body>
    <%- include('./partials/navbar') %>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h3>Realizar pergunta</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/salvarpergunta">
                    <label>Título</label>
                    <input required name="titulo" class="form-control" type="text" placeholder="Título">
                    <label class="mt-3">Descrição</label>
                    <textarea required name="descricao" class="form-control" placeholder="Descreva sua pergunta aqui"></textarea>
                    <button class="btn btn-outline-dark mt-3">Perguntar</button>
                </form>
            </div>
        </div> 
    </div>
</body>
